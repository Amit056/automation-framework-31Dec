<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" parallel="false">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="Grouped API Tests">
        <!-- ðŸ”¥ CI/CD will inject group name here -->
        <groups>
            <run>
                <include name="${groups}"/>
            </run>
        </groups>
        <packages>
            <package name="apiTest"/>
        </packages>
    </test>
</suite>